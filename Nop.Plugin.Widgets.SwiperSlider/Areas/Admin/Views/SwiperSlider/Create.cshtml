@model SwiperSliderModel

@{
    ViewBag.PageTitle = T("Nop.Plugin.Widgets.SwiperSlider.Admin.Sliders.Create.PageTitle").Text;
    NopHtml.SetActiveMenuItemSystemName("Nop.Plugin.Widgets.SwiperSlider.Root");
}

<form asp-controller="SwiperSlider" asp-action="Create" method="post" id="slider-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Nop.Plugin.Widgets.SwiperSlider.Admin.Sliders.Create.Title")
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Nop.Plugin.Widgets.SwiperSlider.Admin.Sliders.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>