@model SwiperSliderItemModel

@{
    var name = Model.Name;
    ViewBag.PageTitle = T("Nop.Plugin.Widgets.SwiperSlider.Admin.SliderItems.Edit.PageTitle", name).Text;
    NopHtml.SetActiveMenuItemSystemName("Nop.Plugin.Widgets.SwiperSlider.Root");
}

<form asp-controller="SwiperSlider" asp-action="SliderItemEdit" method="post" id="slider-item-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Nop.Plugin.Widgets.SwiperSlider.Admin.SliderItems.Edit.Title", name)
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="Edit" asp-route-id="@Model.SliderId">@T("Nop.Plugin.Widgets.SwiperSlider.Admin.Sliders.BackToSlider")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="slider-item-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_SliderItem.CreateOrUpdate", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="slider-item-delete" asp-action="SliderItemDelete" />